<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/d_click">
    <com.wuxianedu.widget.RoundImageView android:id="@+id/weixin_lv_head"
        android:layout_width="60dp" android:layout_height="60dp"
        android:layout_margin="10dp" android:src="@drawable/icon_public"/>
    <TextView  android:id="@+id/weixin_lv_quanquan" android:layout_width="20dp"
        android:layout_height="20dp" android:background="@drawable/aii" 
        android:layout_alignTop="@id/weixin_lv_head"  android:layout_alignRight="@id/weixin_lv_head"
        android:layout_marginTop="1dp" android:gravity="center" android:textColor="#ffffff"/>
    <TextView android:id="@+id/weixin_lv_name" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="sdfasdf"
        android:layout_alignTop="@id/weixin_lv_head" android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/weixin_lv_head" android:textSize="16sp"/>
    <TextView android:id="@+id/weixin_lv_sign" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_toRightOf="@id/weixin_lv_head"
        android:layout_below="@+id/weixin_lv_name" android:layout_marginTop="7dp"
        android:text="fasdfas" android:textSize="13sp" />
    <TextView  android:id="@+id/weixin_lv_date" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_alignParentRight="true"
        android:layout_alignTop="@id/weixin_lv_name" android:text="fadas"
        android:padding="2dp" android:textSize="11dp"/>

</RelativeLayout>
