<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >
    <TextView android:id="@+id/chat_lv_date" android:layout_width="30dp"
        android:layout_height="wrap_content" android:layout_centerHorizontal="true"
        android:text="asdf" android:textColor="#ffffff" 
        android:background="@drawable/d_sub_text" android:textSize="10dp"
        android:gravity="center_horizontal" android:layout_marginTop="10dp"/>
    <com.wuxianedu.widget.RoundImageView android:id="@+id/chat_lv_head" android:layout_width="50dp"
        android:layout_height="50dp" android:src="@drawable/img_12"
        android:layout_below="@id/chat_lv_date" android:layout_alignParentRight="true" 
        android:layout_marginTop="7dp" android:layout_marginRight="10dp"/>
    <TextView android:id="@+id/chat_lv_contact" android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_alignParentRight="true" android:layout_marginRight="65dp"
        android:background="@drawable/d_textbg_pressed" android:layout_marginTop="30dp"
        android:text="asdfasdfsa" android:paddingBottom="15dp" android:minHeight="55dp"
        android:maxWidth="200dp" android:gravity="center_vertical" />
    <ImageView  android:id="@+id/chat_lv_contact_yuyin" android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_alignParentRight="true" android:layout_marginRight="65dp"
         android:layout_marginTop="30dp"  android:background="@drawable/d_textbg_pressed"
        android:paddingBottom="15dp" android:minHeight="55dp"
        android:gravity="center_vertical" android:visibility="visible" 
        android:src="@anim/video"
        />
    <ImageView  android:id="@+id/chat_lv_contact_image" android:layout_width="150dp"
        android:layout_height="200dp" 
        android:layout_alignParentRight="true" android:layout_marginRight="65dp"
         android:layout_marginTop="30dp"  
        android:paddingBottom="15dp" android:minHeight="55dp"
        android:gravity="center_vertical" android:visibility="visible" 
        />

</RelativeLayout>
